<div class="mb10">
  <a class="btn" href="<%= url_for(:controller => 'admin/categories', :action => 'new') %>"><i class="icon-plus-sign"></i> 添加分类</a>
</div>

<div class="span5 tree">
<% @categories.each do |category| %>
  <div>
    <%= render "tree_node", :category => category %>
    <% unless category.children.blank? %>
    <div class="children">
      <% category.children.each do |c| %>
      <%= render "tree_node", :category => c %>
      <% end %>
    </div>
    <% end %>
  </div>
<% end %>
</div>