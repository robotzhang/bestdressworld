<div class="header">
  <div class="nav-bar">
    <div class="container text-center">
      <ul class="nav-main pull-left unstyled">
        <li><a <%=nav_active(nil, 'homepage')%> href="<%= root_url %>"><i class="icon-home"></i> Home</a></li>
        <li class="split"><a <%=nav_active('products')%> href="<%= products_url %>">Products</a></li>
        <!--li class="split"><a <%=nav_active('brands')%> href="<%= brands_url %>">Brands</a></li-->
      </ul>
      <a style="height: 25px;" href="<%= root_url %>"><img src="<%= asset_path('logo.png') %>"/></a>
      <div class="pull-right" style="margin-top: 3px;">
        <% if signed_in? %>
            <div class="input-append">
              <a class="btn btn-small" href="<%=user_path(current_user.username)%>">
                <i class="icon-user"></i>
                <%=current_user.nickname%>
                <!--b class="caret"></b-->
              </a>
              <a class="btn btn-small" href="<%= logout_path(:ret_url => request.url) %>"><i class="icon-off"></i> logout</a>
            </div>
        <% else %>
            <div class="input-append">
              <a class="btn btn-small" href="<%=login_url(:ret_url => request.url)%>">login</a>
              <a class="btn btn-small" href="<%=signup_url(:ret_url => request.url)%>">sign up </a>
            </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="bottom"></div>
</div>
